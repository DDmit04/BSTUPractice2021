        <ListBox x:Name="CollectionsList" Margin="0,77,0,0" BorderBrush="{x:Null}" MouseDoubleClick="CollectionsList_MouseDoubleClick">
            <TextBlock Text="Collection 1" Height="32" Width="582" FontSize="17" Padding="10,0,0,0" />
            <TextBlock Text="Collection 2" Height="32" Width="582" FontSize="17" Padding="10,0,0,0" />


        </ListBox>


    </Grid>
