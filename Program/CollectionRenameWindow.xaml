<Window x:Class="Program.CollectionRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="CollectionRenameWindow" Height="207" Width="354">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NewCollectionNameTextBox" Padding="3" VerticalAlignment="Top" Height="33" FontSize="17" Margin="10,49,10,0" BorderBrush="#FF00030C" TextChanged="NewCollectionNameTextBox_TextChanged"/>
        <Label Content="New collection name" Margin="10,8,161,0" FontSize="17" VerticalAlignment="Top"/>
        <Button x:Name="OkBtn" Content="OK" Margin="10,5,10,3" Background="#FF9AFF6B" Click="OkBtn_Click" Grid.Row="1"/>
        <Button x:Name="CancelBtn" Content="Cancel" Margin="10,3,10,13" Background="#FFF53A3A" Click="CancelBtn_Click" Grid.Row="2"/>

    </Grid>
</Window>
